      - name: Download dist from artifact
        uses: actions/download-artifact@v3
        with:
          name: dist
          path: ./dist

      - uses: actions/setup-node@v3
        with:
          node-version: '18.x'
          registry-url: 'https://registry.npmjs.org'

      - run: cd dist/libs/components && npm publish --tag beta --access public --verbose

