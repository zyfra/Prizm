{
  "compileOnSave": false,
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "importHelpers": true,
    "target": "es2019",
    "module": "esnext",
    "lib": ["es2017", "es2018", "es2019", "dom", "ES2021.String"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "noImplicitOverride": true,
    "strictPropertyInitialization": true,
    "baseUrl": ".",
    "paths": {
      "@prizm-ui/addon-query-builder": ["libs/addons/query-builder/src/index.ts"],
      "@prizm-ui/ast": ["libs/ast/src/index.ts"],
      "@prizm-ui/ast/cb3-code-examples": ["libs/ast/cb3-code-examples/src/index.ts"],
      "@prizm-ui/ast/cb3-template-examples": ["libs/ast/cb3-template-examples/src/index.ts"],
      "@prizm-ui/ast/code": ["libs/ast/code/src/index.ts"],
      "@prizm-ui/ast/schematics-helpers": ["libs/ast/schematics-helpers/src/index.ts"],
      "@prizm-ui/charts": ["libs/charts/base/src/index.ts"],
      "@prizm-ui/components": ["libs/components/src/index.ts"],
      "@prizm-ui/core": ["libs/core/src/index.ts"],
      "@prizm-ui/doc": ["libs/doc/base/src/index.ts"],
      "@prizm-ui/flag-icons": ["libs/icons/flags/src/index.ts"],
      "@prizm-ui/helpers": ["libs/helpers/src/index.ts"],
      "@prizm-ui/i18n": ["libs/i18n/src/index.ts"],
      "@prizm-ui/icons": ["libs/icons/base/src/index.ts"],
      "@prizm-ui/icons-loader": ["libs/icons/loader/src/index.ts"],
      "@prizm-ui/icons-loader/full": ["libs/icons/loader/full/src/index.ts"],
      "@prizm-ui/icons/base": ["libs/icons/base/base/index.ts"],
      "@prizm-ui/icons/base/names": ["libs/icons/base/base/names/index.ts"],
      "@prizm-ui/icons/base/source": ["libs/icons/base/base/source/index.ts"],
      "@prizm-ui/icons/base/source/*": ["libs/icons/base/base/source/*"],
      "@prizm-ui/icons/core": ["libs/icons/base/core/src/index.ts"],
      "@prizm-ui/icons/full": ["libs/icons/base/full/index.ts"],
      "@prizm-ui/icons/full/names": ["libs/icons/base/full/names/index.ts"],
      "@prizm-ui/icons/full/source": ["libs/icons/base/full/source/index.ts"],
      "@prizm-ui/icons/full/source/*": ["libs/icons/base/full/source/*"],
      "@prizm-ui/nx-plugin": ["libs/plugin/src/index.ts"],
      "@prizm-ui/theme": ["libs/theme/src/index.ts"],
      "@prizm/test": ["libs/test/src/index.ts"],
      "local": ["local/src/index.ts"],
      "nx-mv": ["libs/nxmv/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true,
    "fullTemplateTypeCheck": true
  },
  "exclude": ["node_modules", "tmp"]
}
