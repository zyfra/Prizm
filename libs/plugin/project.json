{
  "name": "plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/plugin/src",
  "projectType": "library",
  "targets": {
    "sync-files": {
      "executor": "@prizm-ui/nx-plugin:ai-sync",
      "options": {
        "directory": "libs/theme/src/lib",
        "serverUrl": "http://localhost:3500",
        "endpoint": "/ai/v1/simple/insertByFile/prizm/prizm-code",
        "concurrency": 1
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/plugin/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/plugin"],
      "options": {
        "jestConfig": "libs/plugin/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/plugin",
        "tsConfig": "libs/plugin/tsconfig.lib.json",
        "packageJson": "libs/plugin/package.json",
        "main": "libs/plugin/src/index.ts",
        "assets": [
          "libs/plugin/*.md",
          {
            "input": "./libs/plugin/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/plugin/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/plugin",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./libs/plugin",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    }
  },
  "tags": []
}
